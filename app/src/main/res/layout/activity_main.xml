<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2D30"
    android:textColor="@android:color/white"
    android:layout_margin="1dp"
    tools:context=".MainActivity">

    <!-- Black Screen for Computation and Result -->
    <LinearLayout
        android:id="@+id/black_screen"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_margin="16dp"
        android:gravity="end"
        android:orientation="vertical"
        android:padding="10dp"

        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/gridLayout">

        <!-- Computation Display -->
        <TextView
            android:id="@+id/computation_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="29dp"
            android:gravity="right|center_vertical"
            android:text="45345974"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <!-- Result Display -->
        <TextView
            android:id="@+id/result_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:text="DanielTongu"
            android:textColor="@android:color/white"
            android:textSize="60sp" />

    </LinearLayout>

    <!-- GridLayout for Buttons -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="475dp"
        android:layout_margin="16dp"
        android:columnCount="4"
        android:rowCount="6"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Row 1: C, (, ), ÷ -->
        <Button
            android:id="@+id/buttonC"
            style="@style/ClearButton"
            android:text="C" />

        <Button
            android:id="@+id/buttonOpenBracket"
            style="@style/SpecialFunctionButton"
            android:text="(" />

        <Button
            android:id="@+id/buttonCloseBracket"
            style="@style/SpecialFunctionButton"
            android:text=")" />

        <Button
            android:id="@+id/buttonDivide"
            style="@style/OperatorButton"
            android:text="÷" />

        <!-- Row 3: 7, 8, 9, × -->
        <Button
            android:id="@+id/button7"
            style="@style/NumericButton"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            style="@style/NumericButton"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            style="@style/NumericButton"
            android:text="9" />

        <Button
            android:id="@+id/buttonMultiply"
            style="@style/OperatorButton"
            android:text="×" />

        <!-- Row 4: 4, 5, 6, - -->
        <Button
            android:id="@+id/button4"
            style="@style/NumericButton"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            style="@style/NumericButton"
            android:text="5" />

        <Button
            android:id="@+id/button6"
            style="@style/NumericButton"
            android:text="6" />

        <Button
            android:id="@+id/buttonSubtract"
            style="@style/OperatorButton"
            android:text="-" />

        <!-- Row 5: 1, 2, 3, + -->
        <Button
            android:id="@+id/button1"
            style="@style/NumericButton"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            style="@style/NumericButton"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            style="@style/NumericButton"
            android:text="3" />

        <Button
            android:id="@+id/buttonAdd"
            style="@style/OperatorButton"
            android:text="+" />

        <!-- Row 6: AC, 0, ., = -->
        <Button
            android:id="@+id/buttonAC"
            style="@style/ClearAllButton"
            android:text="AC" />

        <Button
            android:id="@+id/button0"
            style="@style/NumericButton"
            android:text="0" />

        <Button
            android:id="@+id/buttonDecimal"
            style="@style/SpecialFunctionButton"
            android:text="." />

        <Button
            android:id="@+id/buttonEquals"
            style="@style/OperatorButton"
            android:text="=" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>